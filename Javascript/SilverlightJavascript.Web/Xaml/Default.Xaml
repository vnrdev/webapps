<?xml version="1.0" encoding="UTF-8"?>
<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    Loaded="onLoaded">

    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>

    <Border Grid.Column="0" Grid.Row="0" MouseLeftButtonUp="gotoAccuracyPage">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="Maroon"/>
                <GradientStop Color="DarkSlateGray" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <TextBlock Text="Accuracy" Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>

    <Border Grid.Column="1" Grid.Row="0" MouseLeftButtonUp="gotoSpeedPage">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="DarkSlateGray"/>
                <GradientStop Color="Maroon" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <TextBlock Text="Speed" Foreground="White" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</Grid>
